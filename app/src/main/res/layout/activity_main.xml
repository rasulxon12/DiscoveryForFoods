<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cen_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif"
        android:padding="15dp"
        android:text="Discovery"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/main_view"
        android:layout_width="410dp"
        android:layout_height="580dp"
        android:background="#E8E7E9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="150dp"
        android:layout_height="165dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/card3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card2"
        app:layout_constraintTop_toTopOf="@id/main_view">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/hotels" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:fontFamily="sans-serif"
            android:text="Hotels"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="62dp"
            android:fontFamily="sans-serif"
            android:text="42 Place"
            android:textColor="#9AA39A"
            android:textSize="13sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="150dp"
        android:layout_height="165dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/card4"
        app:layout_constraintLeft_toRightOf="@id/card1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_view">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/finedinning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:fontFamily="sans-serif"
            android:text="Fine Dining"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="62dp"
            android:fontFamily="sans-serif"
            android:text="15 Place"
            android:textColor="#9AA39A"
            android:textSize="13sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="150dp"
        android:layout_height="165dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/card5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card4"
        app:layout_constraintTop_toBottomOf="@id/card1">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/cafe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:fontFamily="sans-serif"
            android:text="Cafes"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="62dp"
            android:fontFamily="sans-serif"
            android:text="28 Place"
            android:textColor="#9AA39A"
            android:textSize="13sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="150dp"
        android:layout_height="166dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="60dp"
        app:layout_constraintBottom_toTopOf="@id/card6"
        app:layout_constraintLeft_toRightOf="@id/card3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6C528" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/nearby" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:fontFamily="sans-serif"
            android:text="Nearby"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="62dp"
            android:fontFamily="sans-serif"
            android:text="34 Place"
            android:textColor="#9AA39A"
            android:textSize="13sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="150dp"
        android:layout_height="165dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/main_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card6"
        app:layout_constraintTop_toBottomOf="@id/card3">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/fastfoods" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:fontFamily="sans-serif"
            android:text="Fast Foods"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="62dp"
            android:fontFamily="sans-serif"
            android:text="29 Place"
            android:textColor="#9AA39A"
            android:textSize="13sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card6"
        android:layout_width="150dp"
        android:layout_height="165dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/main_view"
        app:layout_constraintLeft_toRightOf="@id/card5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card4">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/pizza" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:fontFamily="sans-serif"
            android:text="Pizza"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="62dp"
            android:fontFamily="sans-serif"
            android:text="21 Place"
            android:textColor="#9AA39A"
            android:textSize="13sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/discovery"
        app:layout_constraintTop_toBottomOf="@id/main_view" />

    <TextView
        android:id="@+id/h_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21.5dp"
        android:fontFamily="sans-serif"
        android:text="Home"
        android:textColor="#9AA39A"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dis_text"
        app:layout_constraintTop_toBottomOf="@id/home" />

    <ImageView
        android:id="@+id/discovery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/discovery"
        android:tooltipText="Discovery"
        app:layout_constraintLeft_toRightOf="@id/home"
        app:layout_constraintRight_toLeftOf="@id/bookmarks"
        app:layout_constraintTop_toBottomOf="@id/main_view" />

    <TextView
        android:id="@+id/dis_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="sans-serif"
        android:text="Discovery"
        android:textColor="#EFF139"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/h_text"
        app:layout_constraintRight_toLeftOf="@id/b_text"
        app:layout_constraintTop_toBottomOf="@id/discovery" />

    <ImageView
        android:id="@+id/bookmarks"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bookmarks"
        app:layout_constraintLeft_toRightOf="@id/discovery"
        app:layout_constraintRight_toLeftOf="@id/topfoods"
        app:layout_constraintTop_toBottomOf="@id/main_view" />

    <TextView
        android:id="@+id/b_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="sans-serif"
        android:text="Bookmark"
        android:textColor="#9AA39A"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/dis_text"
        app:layout_constraintRight_toLeftOf="@id/tf_text"
        app:layout_constraintTop_toBottomOf="@id/bookmarks" />

    <ImageView
        android:id="@+id/topfoods"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/topfoods"
        app:layout_constraintLeft_toRightOf="@id/bookmarks"
        app:layout_constraintRight_toLeftOf="@id/prfile"
        app:layout_constraintTop_toBottomOf="@id/main_view" />

    <TextView
        android:id="@+id/tf_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:fontFamily="sans-serif"
        android:text="Top Foods"
        android:textColor="#9AA39A"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/bookmarks"
        app:layout_constraintRight_toLeftOf="@id/p_text"
        app:layout_constraintTop_toBottomOf="@id/topfoods" />

    <ImageView
        android:id="@+id/prfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile"
        app:layout_constraintLeft_toRightOf="@id/topfoods"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_view" />

    <TextView
        android:id="@+id/p_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:text="Profile"
        android:textColor="#9AA39A"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/tf_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prfile" />


</androidx.constraintlayout.widget.ConstraintLayout>